// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int @id @default(autoincrement())
  telegramId Int @unique
}

model Price {
  id            Int      @id @default(autoincrement())
  pair          String
  m5_macd       Decimal  @db.Decimal(11, 8)
  m5_signal     Decimal  @db.Decimal(11, 8)
  m5_histogram  Decimal  @db.Decimal(11, 8)
  m5_close      Decimal  @db.Decimal(10, 5)
  m5_ema200     Decimal  @db.Decimal(10, 5)
  m15_macd      Decimal  @db.Decimal(11, 8)
  m15_signal    Decimal  @db.Decimal(11, 8)
  m15_histogram Decimal  @db.Decimal(11, 8)
  m15_close     Decimal  @db.Decimal(10, 5)
  m15_ema200    Decimal  @db.Decimal(10, 5)
  m30_macd      Decimal  @db.Decimal(11, 8)
  m30_signal    Decimal  @db.Decimal(11, 8)
  m30_histogram Decimal  @db.Decimal(11, 8)
  m30_close     Decimal  @db.Decimal(10, 5)
  m30_ema200    Decimal  @db.Decimal(10, 5)
  h1_macd       Decimal  @db.Decimal(11, 8)
  h1_signal     Decimal  @db.Decimal(11, 8)
  h1_histogram  Decimal  @db.Decimal(11, 8)
  h1_close      Decimal  @db.Decimal(10, 5)
  h1_ema200     Decimal  @db.Decimal(10, 5)
  h4_close      Decimal  @db.Decimal(10, 5)
  h4_ema200     Decimal  @db.Decimal(10, 5)
  d1_close      Decimal  @db.Decimal(10, 5)
  d1_ema200     Decimal  @db.Decimal(10, 5)
  w1_close      Decimal  @db.Decimal(10, 5)
  w1_ema200     Decimal  @db.Decimal(10, 5)
  created_at    DateTime

  @@unique([pair, created_at])
}
