// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int @id @default(autoincrement())
  telegramId Int @unique
}

model Price {
  id         Int      @id @default(autoincrement())
  pair       String
  macd       Decimal  @default(0) @db.Decimal(11, 8)
  signal     Decimal  @default(0) @db.Decimal(11, 8)
  histogram  Decimal  @default(0) @db.Decimal(11, 8)
  close      Decimal  @default(0) @db.Decimal(10, 5)
  ema200     Decimal  @default(0) @db.Decimal(10, 5)
  timeframe  String
  created_at DateTime

  @@unique([pair, created_at])
}
